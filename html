<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TradingView Widget</title>
</head>
<body>
    <div class="tradingview-widget-container">
        <div id="tradingview-widget"></div>
        <script src="https://s3.tradingview.com/external-embedding/embed-widget-symbol-overview.js"></script>
        <script>
            // Recebe parâmetros dinâmicos da URL
            const urlParams = new URLSearchParams(window.location.search);
            const symbols = urlParams.get('symbols') || "AAPL|1D,GOOGL|1D,MSFT|1D"; // Símbolos padrão

            // Cria o widget TradingView usando os símbolos fornecidos
            new TradingView.widget({
                "container_id": "tradingview-widget",
                "symbols": symbols.split(',').map(sym => [sym]),
                "width": "100%",
                "height": "600",
                "colorTheme": "dark",
                "autosize": true,
                "chartOnly": false,
                "locale": "en",
                // Outras configurações...
            });
        </script>
    </div>
</body>
</html>
